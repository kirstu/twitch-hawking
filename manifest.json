{
  "manifest_version": 2,

  "name": "Twitch Hawking",
  "description": "This extension will tell the truth",
  "version": "1.0",
  "options_page": "options.html",

  "browser_action": {
   "default_icon": "speech.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": ["main.js"]
  }],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "background": {
    "scripts": ["background.js"]
  }
}
